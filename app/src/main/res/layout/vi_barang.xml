<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">

    <TextView
        android:id="@+id/textView32"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="37dp"
        android:layout_marginTop="37dp"
        android:text="Nama Barang"
        android:textSize="18sp"
        android:textColor="@color/text"
        android:backgroundTint="@color/text"/>

    <EditText
        android:id="@+id/editText31"
        android:layout_width="302dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView32"
        android:layout_alignParentStart="true"
        android:layout_marginStart="34dp"
        android:layout_marginTop="0dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Cari nama barang"
        android:textSize="16sp"
        android:textColor="@color/text"
        android:backgroundTint="@color/text"/>

    <TextView
        android:id="@+id/textView33"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editText31"
        android:layout_alignStart="@+id/textView32"
        android:text="Harga Barang"
        android:textSize="18sp"
        android:textColor="@color/text"/>

    <EditText
        android:id="@+id/editText33"
        android:layout_width="302dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView33"
        android:layout_alignStart="@+id/editText31"
        android:ems="10"
        android:inputType="number"
        android:text=""
        android:textSize="16sp"
        android:textColor="@color/text"
        android:backgroundTint="@color/text"/>

    <TextView
        android:id="@+id/textView34"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editText33"
        android:layout_alignStart="@+id/textView32"
        android:text="Jumlah"
        android:textSize="18sp"
        android:textColor="@color/text"/>

    <EditText
        android:id="@+id/editText34"
        android:layout_width="302dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView34"
        android:layout_alignStart="@+id/editText31"
        android:ems="10"
        android:inputType="number"
        android:text=""
        android:textSize="16sp"
        android:textColor="@color/text"
        android:backgroundTint="@color/text"/>
</RelativeLayout>
