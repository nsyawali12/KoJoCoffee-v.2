<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">

    <TextView
        android:id="@+id/textView40"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="37dp"
        android:layout_marginTop="37dp"
        android:text="Nama Menu"
        android:textSize="18sp"
        android:textColor="@color/text" />

    <EditText
        android:id="@+id/namaMenu"
        android:layout_width="302dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView40"
        android:layout_alignStart="@+id/textView40"
        android:layout_marginStart="-5dp"
        android:layout_marginTop="0dp"
        android:backgroundTint="@color/text"
        android:ems="10"
        android:hint="Cari nama menu"
        android:inputType="textPersonName"
        android:textColor="@color/text"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textView41"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/namaMenu"
        android:layout_alignStart="@+id/textView40"
        android:layout_marginStart="0dp"
        android:layout_marginTop="15dp"
        android:text="Harga Menu"
        android:textSize="18sp"
        android:textColor="@color/text"/>

    <EditText
        android:id="@+id/hargaMenu"
        android:layout_width="302dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView41"
        android:layout_alignStart="@+id/namaMenu"
        android:backgroundTint="@color/text"
        android:ems="10"
        android:hint="Masukan harga baru"
        android:inputType="number"
        android:textColor="@color/text"
        android:textSize="16sp" />

    <Button
        android:id="@+id/updateMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="217dp"
        android:text="Update" />
</RelativeLayout>
