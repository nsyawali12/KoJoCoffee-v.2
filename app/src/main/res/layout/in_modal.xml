<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"

    android:layout_height="match_parent"

    android:id="@+id/in_modal"

    android:background="@drawable/background">


    <EditText

        android:id="@+id/tglModal"

        android:layout_width="wrap_content"

        android:layout_height="wrap_content"

        android:layout_below="@+id/textView31"

        android:layout_alignStart="@+id/textView31"

        android:layout_marginStart="-1dp"

        android:layout_marginTop="76dp"

        android:backgroundTint="@color/text"

        android:ems="10"

        android:hint="Masukkan Tanggal"

        android:inputType="number"

        android:textColor="@color/text"
        android:textSize="16sp" />

    <TextView

        android:id="@+id/textView64"

        android:layout_width="wrap_content"

        android:layout_height="wrap_content"

        android:layout_alignParentStart="true"

        android:layout_alignParentTop="true"

        android:layout_marginStart="39dp"

        android:layout_marginTop="113dp"

        android:text="Tanggal"

        android:textColor="@color/text"

        android:textSize="18sp" />

    <TextView

        android:id="@+id/textView31"

        android:layout_width="wrap_content"

        android:layout_height="wrap_content"

        android:layout_alignParentStart="true"

        android:layout_alignParentTop="true"

        android:layout_marginStart="37dp"

        android:layout_marginTop="37dp"

        android:text="Jumlah Modal"

        android:textSize="18sp"

        android:textColor="@color/text"/>


    <EditText

        android:id="@+id/in_jmodal"

        android:layout_width="wrap_content"

        android:layout_height="wrap_content"

        android:layout_below="@+id/textView31"

        android:layout_alignStart="@+id/textView31"

        android:layout_marginStart="-4dp"

        android:layout_marginTop="0dp"

        android:backgroundTint="@color/text"

        android:ems="10"

        android:hint="Masukan Jumlah Modal"

        android:inputType="number"

        android:textColor="@color/text"
        android:textSize="16sp" />

    <Button

        android:id="@+id/but_confModal"

        android:layout_width="wrap_content"

        android:layout_height="wrap_content"

        android:layout_alignParentTop="true"

        android:layout_marginStart="3dp"

        android:layout_marginTop="207dp"
        android:layout_toEndOf="@+id/textView31"
        android:text="Confirm" />

</RelativeLayout>
